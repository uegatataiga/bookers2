  <td><%= link_to "Edit", edit_book_path(@books.id), class: "btn btn-sm btn-success" %></td>
  <td><%= link_to "Destroy", book_path(@books.id), class: "btn btn-sm btn-danger", method: :delete %></td>
  <% end %>
</tr>

