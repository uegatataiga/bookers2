<div class="container px-5 px-sm-0">
 <div class="row">
 <div class="col-md-3">
 <%= render 'books/list', book: @book, user: @user %>
 </div>

<div class="col-md-8 offset-md-1">
<table class="table">
 <h1>Users</h1>
 <thead>
  <tr>
   <th></th>
   <th>image</th>
   <th>name</th>
   <th colspan="3"></th>
  </tr>
 </thead>

<tbody>
  <tr><% @users.each do |user| %></tr>
  <td><%= image_tag user.get_profile_image(100,100) %></td>
  <td><%= user.name %></td>
  <td><%= link_to "Show", user_path(user.id) %></td>
  <% end %>
</tbody>
</table>
</div>
</div>
</div>